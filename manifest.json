{  
   "name":"US-Arabic Transliteration Keyboard",
   "description":"Press Ctrl+Shift+F (Command+Shift+F on a Mac) to open the browser action popup, press Ctrl+Shift+X to start the keyboard on a webpage (Command+Shift+Y on a Mac).",
   "version":"1.0",
   "manifest_version":2,
   "background":{  
      "scripts":["jquery-3.1.0.min.js", "background.js"],
      "persistent":false
   },
   "permissions":["tabs", "contextMenus"],
   "browser_action":{  
      "default_popup":"browser_action.html"
   },
   "content_scripts":[  
      {  
         "matches":["<all_urls>"],
         "js":["jquery-3.1.0.min.js", "content.js"],
         "run_at":"document_end"
      }
   ],
   "commands":{
      "_execute_browser_action": {
         "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
       },
       "description":"Browser Popup."
       },
       "X":{  
         "suggested_key":{  
            "default":"Alt+Shift+X",
            "mac":"Alt+Shift+X"
         },
         "description":"Turn on Special Keyboard"
      }
   }
}
